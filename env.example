# VALD Reference Data Upload Environment Configuration
# Copy this file to .env and fill in your actual values

# Google Cloud Platform Configuration
GCP_PROJECT_ID=your-gcp-project-id
GCP_BUCKET_NAME=your-gcp-bucket-name
GCP_DATASET_ID=your-bigquery-dataset-id
GCP_TABLE_ID=your-bigquery-table-id

# VALD API Configuration
VALD_API_ENDPOINT=https://api.vald.com/v1
VALD_API_KEY=your-vald-api-key
VALD_API_SECRET=your-vald-api-secret

# Application Configuration
LOG_LEVEL=INFO
DEBUG_MODE=False
MAX_RETRIES=3
TIMEOUT_SECONDS=30

# Data Processing Configuration
BATCH_SIZE=1000
CHUNK_SIZE=100
ENABLE_VALIDATION=True
ENABLE_LOGGING=True

# File Paths (optional - defaults to current directory)
INPUT_DATA_DIR=./data/input
OUTPUT_DATA_DIR=./data/output
LOG_DIR=./logs
TEMP_DIR=./temp
